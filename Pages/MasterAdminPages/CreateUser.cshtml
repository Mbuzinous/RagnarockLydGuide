@page
@model RagnarockTourGuide.Pages.MasterAdminPages.CreateUserModel
@{
}
<h2>Create User</h2>

<form method="post" enctype="multipart/form-data">
    <div>
        <label>Name</label>
        <input asp-for="NewUser.Name" class="form-control" />
        <span asp-validation-for="NewUser.Name" class="text-danger"></span>
    </div>
    <div>
        <label>Email</label>
        <input asp-for="NewUser.Email" class="form-control" />
        <span asp-validation-for="NewUser.Email" class="text-danger"></span>
    </div>
    <div>
        <label>Password</label>
        <input asp-for="NewUser.Password" type="password" class="form-control" />
        <span asp-validation-for="NewUser.Password" class="text-danger"></span>
    </div>
    <div>
        <label>Role</label>
        <select asp-for="NewUser.Role" class="form-control">
            <option value="2">Member</option>
            <option value="4">Admin</option>
        </select>
    </div>
    <div>
        <label>Image</label>
        <input asp-for="NewUser.ImageFile" type="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>