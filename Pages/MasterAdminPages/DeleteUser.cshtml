@page
@model RagnarockTourGuide.Pages.MasterAdminPages.DeleteUserModel
@{
}
<h2>Delete User</h2>
<p>Are you sure you want to delete this user?</p>

<div>
    <strong>Name:</strong> @Model.UserToDelete.Name
</div>
<div>
    <strong>Email:</strong> @Model.UserToDelete.Email
</div>
<div>
    <strong>Role:</strong> @Model.UserToDelete.Role
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<img src="/userImages/@Model.UserToDelete.ImageFileName" width="100" />
<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="DisplayUsers" class="btn btn-secondary">Cancel</a>
</form>