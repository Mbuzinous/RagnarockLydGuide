@page
@model RagnarockTourGuide.Pages.Account.LoginModel
@{
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label for="email">E-mail</label>
        <input asp-for="Email" class="form-control" id="email" placeholder="Indtast e-mail" />
    </div>
    <div class="form-group">
        <label for="password">Kodeord</label>
        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Indtast kodeord" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Login</button>
    <p class="text-danger mt-2">@Model.ErrorMessage</p>
</form>
