@page
@model RagnarockTourGuide.Pages.Admin.CreateExhibitionModel
@{
}
@*Må ikke slette denne div*@

<br/>
<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto rounded border p-3">
            <h2 class="text-center mb-5">Ny Udstilling</h2>
            <form method="post" enctype="multipart/form-data">

                <div class="row mb-3">
                    <label class=" col-sm-4 col-form-label">Titel</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Exhibition.Title">
                        <span asp-validation-for="Exhibition.Title" class="text-danger"></span>

                    </div>
                </div>

                <div class="row mb-3">
                    <label class=" col-sm-4 col-form-label">Beskrivelse</label>
                    <div class="col-sm-8">
                        <textarea class="form-control" asp-for="Exhibition.Description"></textarea>
                        <span asp-validation-for="Exhibition.Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Udstillingsnummer</label>
                    <div class="col-sm-8">
                        <select class="form-select" asp-for="Exhibition.ExhibitionNumber">
                            @foreach (var number in Model.SuggestedExhibitionNumbers)
                            {
                                <option value="@number">@number</option>
                            }
                        </select>
                        <span asp-validation-for="Exhibition.ExhibitionNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class=" col-sm-4 col-form-label">Etage</label>
                    <div class="col-sm-8">
                        <select class="form-select" asp-for="Exhibition.FloorNumber">

                            <option value="2">2</option>
                            <option value="3">3</option>

                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class=" col-sm-4 col-form-label">Billedfil</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Exhibition.ImageFile">
                        <span asp-validation-for="Exhibition.ImageFile" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class=" col-sm-4 col-form-label">Lydfil</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Exhibition.AudioFile">
                        <span asp-validation-for="Exhibition.AudioFile" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="offset-sm-4 col-sm-4 d-grid">
                        <button type="submit" class="editButtonOpdater">Opret ny udstilling</button>
                    </div>
                    <div class="col-sm-4 d-grid">
                        <a class="editButtonFortryd" href="/Admin/AdminEpisodePage" role="button">Fortryd</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>