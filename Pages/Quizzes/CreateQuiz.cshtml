@page
@model RagnarockTourGuide.Pages.Quizzes.CreateQuizModel
@{
}
<h2>Create New Quiz</h2>

<form method="post">
    <div class="form-group">
        <label>Question</label>
        <input asp-for="Quiz.Question" class="form-control" />
        <span asp-validation-for="Quiz.Question" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Correct Answer</label>
        <input asp-for="Quiz.CorrectAnswer" class="form-control" />
        <span asp-validation-for="Quiz.CorrectAnswer" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>