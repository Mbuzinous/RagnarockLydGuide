@page
@model RagnarockTourGuide.Pages.Quizzes.DeleteQuizModel
@{
}
<h2>Delete Quiz</h2>

<div>
    <h3>Are you sure you want to delete this quiz?</h3>
    <div>
        <strong>Question:</strong> @Model.Quiz.Question
    </div>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="DisplayQuizzes" class="btn btn-secondary">Cancel</a>
    </form>
</div>